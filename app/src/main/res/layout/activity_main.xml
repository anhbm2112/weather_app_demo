<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundweather">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbarMain">

        <TextView
            android:id="@+id/tv_city"
            style="@style/textviewcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/bg_color" />
    </androidx.appcompat.widget.Toolbar>
    <!--    <ImageView-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="200dp"-->
    <!--        android:layout_below="@id/toolbar"/>-->
    <TextView
        android:id="@+id/tv_temperature"
        style="@style/textTemperature"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:textColor="@color/bg_color" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temperature"
        android:gravity="left" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/recy"
        android:layout_below="@id/tv_title" />

    <LinearLayout
        android:id="@+id/chiso_onhiem"
        style="@style/cardViewStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/recyclerView"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tieude"
            style="@style/TieuDeONHIEM" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pollution_AQI"
                style="@style/tvStyleONHIEM_USAQI"
                android:layout_width="200dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/icon_onhiem"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_onhiem_50" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pollution2"
            style="@style/tvStyleONHIEM" />


        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/cardview_recyclerview"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content" />-->
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        style="@style/bottomnavigation"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/white"
        app:menu="@menu/menu_main" />
</RelativeLayout>
