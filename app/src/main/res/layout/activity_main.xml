<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundweather">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbarMain">

        <TextView
            android:id="@+id/tv_city"
            style="@style/textviewcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/bg_color" />
    </androidx.appcompat.widget.Toolbar>
    <!--    <ImageView-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="200dp"-->
    <!--        android:layout_below="@id/toolbar"/>-->
    <TextView
        android:id="@+id/tv_temperature"
        style="@style/textTemperature"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:textColor="@color/bg_color" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temperature"
        android:gravity="left" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/recy"
        android:layout_below="@id/tv_title" />

    <androidx.cardview.widget.CardView
        style="@style/cardViewStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/recyclerView"
        android:background="@color/blue_black_dark"
        android:backgroundTint="@color/blue_black_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chỉ Số Ô Nhiễm "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_pollution_AQI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_pollution2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/cardview_recyclerview"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content" />-->
    </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        style="@style/bottomnavigation"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/cyan_light"
        app:menu="@menu/menu_main" />
</RelativeLayout>
