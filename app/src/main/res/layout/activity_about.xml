<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundweather"
    tools:context=".presentation.ui.screen.about.AboutActivity">

    <LinearLayout
        android:id="@+id/linTimkiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtim"
            style="@style/EdtTim"
            android:hint="Nhập Thành Phố " />

        <Button
            android:id="@+id/bttim"
            style="@style/BtTim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_city_manCity"
        style="@style/textviewcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linTimkiem"
        android:gravity="center"
        android:textColor="@color/bg_color" />

    <TextView
        android:id="@+id/tv_temperature_mancity"
        style="@style/textTemperature"
        android:layout_below="@+id/tv_city_manCity"
        android:gravity="center"
        android:textColor="@color/bg_color" />

    <TextView
        android:id="@+id/tv_ngaycity"
        style="@style/tvngay_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temperature_mancity" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_ngaycity">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>
